<section id="short-url" class="short-url" data-controller="short-url">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-10">
                <div class="row gy-0">
                    {{ form_start(short_url_form, {'attr': {'class': 'short-form', 'data-short-url-target': 'form'}}) }}
                    <div class="row gy-0">
                        <div class="col-md-12">
                            <h5><i class="bi bi-link-45deg"></i> {{ 'short_form.destination_url.h5'|trans }}</h5>
                            {{ form_row(short_url_form.destination_url, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row gy-4">
                        <div class="col-md-6">
                            <h5><i class="bi bi-globe"></i> {{ 'short_form.domain.h5'|trans }}</h5>
                            <input type="text" class="form-control" placeholder="{{ current_app.domain }}/" disabled>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-emoji-smile"></i> {{ 'short_form.shortcut.h5'|trans }}</h5>
                            {{ form_row(short_url_form.shortcut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row gy-4">
                        <div class="col-md-12">
                            {{ form_row(short_url_form.submit) }}
                        </div>
                    </div>
                    {{ form_end(short_url_form) }}

                    {{ include('parts/shortcut.html.twig') }}

                </div>
            </div>
        </div>
    </div>
</section>