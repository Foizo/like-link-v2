<section id="short-url" class="short-url" data-controller="short-url-form">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-10">
                <div class="row gy-0">
                    {{ form_start(short_url_form, {'attr': {'class': 'short-form', 'data-short-url-form-target': 'form'}}) }}
                    <div class="row gy-0">
                        <div class="col-md-12">
                            <h5><i class="bi bi-link-45deg"></i> Your long link</h5>
                            {{ form_row(short_url_form.destination_url, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row gy-4">
                        <div class="col-md-6">
                            <h5><i class="bi bi-globe"></i> Domain</h5>
                            <input type="text" class="form-control" placeholder="{{ current_app.domain }}/" disabled>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-emoji-smile"></i> Custom Likelink</h5>
                            {{ form_row(short_url_form.shortcut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row gy-4">
                        <div class="col-md-12">
                            {{ form_row(short_url_form.submit) }}
                        </div>
                    </div>
                    {{ form_end(short_url_form) }}

                    {{ include('parts/short_url.html.twig') }}

                </div>
            </div>
        </div>
    </div>
</section>