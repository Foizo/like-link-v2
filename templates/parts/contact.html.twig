<section id="contact" class="contact" data-controller="contact">
    <div class="container" data-aos="fade-up">

        <header class="section-header">
            <h2>{{ 'index.section.contact.header.h2'|trans }}</h2>
            <p>{{ 'index.section.contact.header.text'|trans }}</p>
        </header>

        <div class="row gy-4">
            <div class="col-lg-6">
                {{ form_start(contact_form, {'attr': {'class': 'php-email-form', 'data-contact-target': 'form'}}) }}
                <div class="row gy-4">

                    <div class="col-md-6">
                        {{ form_row(contact_form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6 ">
                        {{ form_row(contact_form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(contact_form.subject, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(contact_form.message, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-12 text-center">
                        <div class="loading" data-contact-target="spinner">{{ 'contact_form.spinner.title'|trans }}</div>
                        <div class="sent-message" data-contact-target="message">{{ 'contact_form.success_message'|trans }}</div>
                        {{ form_row(contact_form.submit) }}
                    </div>
                </div>
                {{ form_end(contact_form) }}
            </div>
        </div>
    </div>
</section>